doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='lib/ionic/css/ionic.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    //
      IF using Sass (run gulp sass first), then uncomment below and remove the CSS includes above
      <link href="css/ionic.app.css" rel="stylesheet">
    // ionic/angularjs js
    script(src='lib/ionic/js/ionic.bundle.js')
    // cordova script (this will be a 404 during development)
    script(src='cordova.js')
    // your app's js
    script(src='lib/openfb-angular.js')
    script(src='js/app.js')


    script(src='js/controllers/account/AccountCtrl.js')
    script(src='js/controllers/account/LoginCtrl.js')
    script(src='js/controllers/dash/DashCtrl.js')
    script(src='js/controllers/match/MatchCtrl.js')
    script(src='js/controllers/match/MatchDetailCtrl.js')

    script(src='js/services.js')

  body(ng-app='mb-friendswipe', animation='slide-left-right-ios7')
    //
      The nav bar that will be updated as we navigate between views.
    ion-nav-bar.bar-stable.nav-title-slide-ios7
      ion-nav-back-button.button-icon.icon.ion-ios7-arrow-back
        | Back
    //
      The views will be rendered in the <ion-nav-view> directive below
      Templates are in the /templates folder (but you could also
      have templates inline in this html file if you'd like).
    ion-nav-view
